<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="CENTER" hgap="20" vgap="10" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="UI.time_magic.TimeMagic">

    <Label fx:id="currentTime" GridPane.columnSpan="2" GridPane.halignment="CENTER">
        <font>
            <Font size="24.0" />
        </font>
    </Label>
    <TextField fx:id="speed" GridPane.rowIndex="1" />
    <Button onAction="#setSpeed" text="Set Speed" GridPane.columnIndex="1" GridPane.rowIndex="1" />
    <TextField fx:id="target" promptText="yyyy-MM-dd HH:mm" GridPane.rowIndex="2" />
    <Button onAction="#jumpTo" prefHeight="27.0" prefWidth="73.0" text="Go" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</GridPane>
